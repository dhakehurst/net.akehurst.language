namespace net::akehurst::language::parser;

grammar Tree {
	skip WHITESPACE : "\s+" ;

	tree : node ;
	nodes : node+ ;
	node : branch | leaf | EMPTY ;
	branch : NAME '{'  nodes '}' ;
	leaf : LITERAL | pattern ;
	pattern : LITERAL ':' LITERAL ;
	LITERAL : "'(?:\\?.)*?'" ;
	EMPTY : 'empty' ;
	
	NAME : "[a-zA-Z_][a-zA-Z_0-9]*" ;  //same as IDENTIFIER from OGL.ogl
}