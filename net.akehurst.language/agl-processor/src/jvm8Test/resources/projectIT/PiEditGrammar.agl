namespace projectIT

grammar PiEditGrammar {


// from JSON example
// see also ParserGenUtil.escapeRelevantChars()
char  = unescaped | escape
    (
        '"' | "\\" | "/" | "|" | "[" | "]" | "{" | "}" | "$" | "b" | "f" | "n" | "r" | "t" | "u" HEXDIG HEXDIG HEXDIG HEXDIG
    )
    ;

  leaf escape = "\\" ;
  leaf unescaped = [^\0-\x1F\x22\x5C] ;

  // ----- Core ABNF Rules -----
  // See RFC 4234, Appendix B (http://tools.ietf.org/html/rfc4234).
  leaf DIGIT  = [0-9] ;
  leaf HEXDIG = [0-9a-f] ;

}